{
  "src": "src",
  "dest": "dist",
  "debug": false,
  "critical_css": false,
  "cache_boost": false,
  "minimize": true,
  "linters": {
    "css": true,
    "js": true
  },
  "server": {
    "port": "3000",
    "host": "localhost",
    "open": true
  },
  "styles": {
    "bundle": "style",
    "src": "styles",
    "dest": "css",
    "extension": "scss"
  },
  "scripts": {
    "bundle": "app",
    "src": "js",
    "dest": "js",
    "extension": "js"
  },
  "templates": {
    "src": "views",
    "dest": "./",
    "extension": "html"
  },
  "static": {
    "fonts": {
      "src": "fonts"
    },
    "images": {
      "src": "images"
    },
    "video": {
      "src": "video"
    },
    "ajax": {
      "src": "inc"
    }
  }
}
