{
  "title": "My awesome project!",
  "src": "./src",
  "dest": "./dist",
  "debug": false,
  "linters": true,
  "critical_css": false,
  "cache": false,
  "minimize": false,
  "server": {
    "port": "8080",
    "host": "localhost"
  },
  "env": {
    "dev": "development",
    "prod": "production"
  },
  "styles": {
    "name": "css",
    "bundle": "main",
    "src": "./styles",
    "dest": "./css",
    "glob": "**/*.scss",
    "extension": "scss"
  },
  "scripts": {
    "name": "js",
    "bundle": "app",
    "src": "./js",
    "dest": "./js",
    "glob": "**/*.js",
    "extension": "js"
  },
  "templates": {
    "name": "templates",
    "src": "./views",
    "dest": "./",
    "glob": "*.html",
    "extension": "html"
  },
  "static": {
    "images": {
      "name": "images",
      "src": "./images",
      "dest": "./images"
    },
    "fonts": {
      "name": "fonts",
      "src": "./fonts",
      "dest": "./fonts"
    },
    "video": {
      "name": "video",
      "src": "./video",
      "dest": "./video"
    },
    "ajax": {
      "name": "ajax",
      "src": "./inc",
      "dest": "./inc"
    }
  }
}
