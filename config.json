{
  "src": "./src",
  "dest": "./dist",
  "debug": false,
  "linters": {
    "css": true,
    "js": false
  },
  "critical_css": true,
  "cache_boost": true,
  "minimize": true,
  "server": {
    "port": "8080",
    "host": "localhost",
    "open": true
  },
  "styles": {
    "name": "css",
    "bundle": "main",
    "src": "styles",
    "dest": "css",
    "extension": "scss"
  },
  "scripts": {
    "name": "js",
    "bundle": "app",
    "src": "js",
    "dest": "js",
    "extension": "js"
  },
  "templates": {
    "name": "templates",
    "src": "views",
    "dest": "/",
    "extension": "html"
  },
  "static": {
    "images": {
      "name": "images",
      "src": "images"
    },
    "fonts": {
      "name": "fonts",
      "src": "fonts"
    },
    "video": {
      "name": "video",
      "src": "video"
    },
    "ajax": {
      "name": "ajax",
      "src": "inc"
    }
  }
}
